# Application
NODE_ENV=development
GO_ENV=development

# =============================================================================
# Database (PostgreSQL 16)
# =============================================================================
# Connection string for application code
DATABASE_URL=postgres://solobueno:solobueno_dev@localhost:5432/solobueno_dev?sslmode=disable
# Individual connection parameters (alternative)
DB_HOST=localhost
DB_PORT=5432
DB_USER=solobueno
DB_PASSWORD=solobueno_dev
DB_NAME=solobueno_dev

# =============================================================================
# Cache & Queue (Redis 7)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# Object Storage (MinIO - S3-compatible)
# =============================================================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_CONSOLE_URL=http://localhost:9001
MINIO_ACCESS_KEY=solobueno
MINIO_SECRET_KEY=solobueno_dev
MINIO_BUCKET=solobueno-dev
# S3-compatible settings for AWS SDK
AWS_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=solobueno
AWS_SECRET_ACCESS_KEY=solobueno_dev
AWS_REGION=us-east-1

# API
API_PORT=8080
GRAPHQL_PLAYGROUND=true

# JWT (generate your own for production!)
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRY=60m
REFRESH_TOKEN_EXPIRY=720h

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console
